local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

rconsoleprint("Por Metraton\n")
rconsoleprint("Project Metra Carregado!")
rconsoleprint("NÃO FECHAR ")

local Janela = Rayfield:CreateWindow({
   Name = "Project Metra",
   LoadingTitle = "",
   LoadingSubtitle = "por Metraton",
   ConfigurationSaving = {
      Enabled = false,
   },
})

local AbaPrincipal = Janela:CreateTab("Scripts", nil)
local SeçãoPrincipal = AbaPrincipal:CreateSection("Principal")

local BotãoInfYield = AbaPrincipal:CreateButton({
   Name = "Infinite Yield",
   Callback = function()
      loadstring(game:HttpGet(('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'), true))()
   end,
})

local Slider = AbaPrincipal:CreateSlider({
   Name = "Velocidade",
   Range = {0, 10000},
   Increment = 1,
   Suffix = "velocidade",
   CurrentValue = 16,
   Flag = "Slider1",
   Callback = function(Value)
      game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
   end,
})

local BotãoAimbot = AbaPrincipal:CreateButton({
   Name = "Aimbot",
   Callback = function()
      local ScreenGui = Instance.new("ScreenGui")
      ScreenGui.Parent = game.CoreGui

      local FrameAnimacao = Instance.new("Frame")
      FrameAnimacao.Parent = ScreenGui
      FrameAnimacao.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
      FrameAnimacao.Size = UDim2.new(1, 0, 1, 0)
      FrameAnimacao.BackgroundTransparency = 1

      local LabelAnimacao = Instance.new("TextLabel")
      LabelAnimacao.Parent = FrameAnimacao
      LabelAnimacao.Text = "Carregando..."
      LabelAnimacao.Size = UDim2.new(1, 0, 0.8, 0)
      LabelAnimacao.TextColor3 = Color3.fromRGB(0, 0, 0)
      LabelAnimacao.Font = Enum.Font.GothamBlack
      LabelAnimacao.TextScaled = true
      LabelAnimacao.BackgroundTransparency = 1
      LabelAnimacao.TextStrokeTransparency = 0
      LabelAnimacao.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

      local EfeitoBrilho = Instance.new("UIGradient")
      EfeitoBrilho.Parent = LabelAnimacao
      EfeitoBrilho.Color = ColorSequence.new{
          ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 0)),
          ColorSequenceKeypoint.new(0.5, Color3.fromRGB(255, 255, 0)),
          ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 0, 0))
      }
      EfeitoBrilho.Rotation = 90

      local Som = Instance.new("Sound")
      Som.Parent = ScreenGui
      Som.SoundId = "rbxassetid://6026984224"
      Som.Volume = 3
      Som.Looped = true
      Som:Play()

      local EmissorParticulas = Instance.new("ParticleEmitter", FrameAnimacao)
      EmissorParticulas.Texture = "rbxassetid://8187160402"
      EmissorParticulas.Speed = NumberRange.new(3, 5)
      EmissorParticulas.Lifetime = NumberRange.new(3, 6)
      EmissorParticulas.Rate = 150
      EmissorParticulas.RotSpeed = NumberRange.new(-360, 360)

      wait(3.9)
      FrameAnimacao:Destroy()
      Som:Destroy()

      loadstring(game:HttpGet('https://pastebin.com/raw/5rwtLBN1'))()
   end,
})

local BotãoESP = AbaPrincipal:CreateButton({
   Name = "RGB ESP",
   Callback = function()
      local function criarESP(character)
          if not character then return end

          local highlight = Instance.new("Highlight")
          highlight.Name = "ESP"
          highlight.Adornee = character
          highlight.FillTransparency = 0.5
          highlight.OutlineTransparency = 0.2
          highlight.Parent = game.CoreGui

          local function cicloRGB()
              local hue = 0
              while true do
                  hue = hue + 1
                  if hue > 360 then hue = 0 end
                  local color = Color3.fromHSV(hue / 360, 1, 1)
                  highlight.FillColor = color
                  highlight.OutlineColor = color
                  wait(0.1)
              end
          end

          spawn(cicloRGB)
      end

      local function destacarJogadores()
          for _, player in pairs(game.Players:GetPlayers()) do
              if player.Character then
                  criarESP(player.Character)
              end
          end
      end

      destacarJogadores()

      game.Players.PlayerAdded:Connect(function(player)
         player.CharacterAdded:Connect(function(character)
              criarESP(character)
          end)
      end)
   end,
})

