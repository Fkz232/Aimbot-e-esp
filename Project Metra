local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

rconsoleprint("Por Metraton\n")
rconsoleprint("Project Metra Carregado!")
rconsoleprint("N√ÉO FECHE ")

local Window = Rayfield:CreateWindow({
   Name = "Project Metra",
   LoadingTitle = "",
   LoadingSubtitle = "por Metraton",
   ConfigurationSaving = {
      Enabled = false,
   },
})

local MainTab = Window:CreateTab("Scripts", nil)
local MainSection = MainTab:CreateSection("Principal")

local InfYieldButton = MainTab:CreateButton({
   Name = "Infinite Yield",
   Callback = function()
      loadstring(game:HttpGet(('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'), true))()
   end,
})

local Slider = MainTab:CreateSlider({
   Name = "Slider de Velocidade",
   Range = {0, 10000},
   Increment = 1,
   Suffix = "velocidade",
   CurrentValue = 16,
   Flag = "Slider1",
   Callback = function(Value)
      game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
   end,
})

local AimbotButton = MainTab:CreateButton({
   Name = "Aimbot",
   Callback = function()
      loadstring(game:HttpGet('https://pastebin.com/raw/5rwtLBN1'))()
   end,
})

local ESPButton = MainTab:CreateButton({
   Name = "RGB ESP",
   Callback = function()
      loadstring(game:HttpGet('https://raw.githubusercontent.com/Fkz232/Project-Metra/refs/heads/main/ESP%20RGB'))()
   end,
})

local GhostHubTab = Window:CreateTab("GhostHub", nil)

local GhostHubButton = GhostHubTab:CreateButton({
   Name = "GhostHub",
   Callback = function()
      loadstring(game:HttpGet('https://raw.githubusercontent.com/GhostPlayer352/Test4/main/GhostHub'))()
   end,
})

local JerkR6Button = MainTab:CreateButton({
   Name = "Jerk R6",
   Callback = function()
      loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-jerk-off-25958"))()
   end,
})

local JerkR15Button = MainTab:CreateButton({
   Name = "Jerk R15",
   Callback = function()
      loadstring(game:HttpGet("https://pastefy.app/YZoglOyJ/raw"))()
   end,
})

local ReverseButton = MainTab:CreateButton({
   Name = "Reverse",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/Fkz232/Aimbot-e-esp/refs/heads/main/Reverse"))()
   end,
})

local VflyButton = MainTab:CreateButton({
   Name = "Vfly",
   Callback = function()
      loadstring(game:HttpGet('https://raw.githubusercontent.com/Fkz232/Project-Metra/refs/heads/main/Vfly%20Project%20Metra'))()
   end,
