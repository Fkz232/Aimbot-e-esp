local W = Instance.new("TextButton")
local S = Instance.new("TextButton")

VflyProjectMetra.Name = "Vfly Project Metra"
VflyProjectMetra.Parent = game.CoreGui
VflyProjectMetra.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Drag.Name = "Drag"
Drag.Parent = VflyProjectMetra
Drag.Active = true
Drag.BackgroundColor3 = Color3.fromRGB(0, 150, 191)
Drag.BorderSizePixel = 0
Drag.Draggable = true
Drag.Position = UDim2.new(0.482, 0, 0.454, 0)
Drag.Size = UDim2.new(0, 237, 0, 27)

